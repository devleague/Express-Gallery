extends ./layout/layout.jade

block title
  h1 Edit Image

block content
  p #{Galleries.description}
  img(src= '#{Galleries.link}')
  p By: #{Galleries.author}
  br
  form(method="POST", action="/gallery")
    input(type="text", name="author", value=author placeholder="Author Name")
    br
    br
    input(type="text", name="link", value=link placeholder="Image URL Link")
    br
    br
    input(type="text", name="description", value=description placeholder="Description")
    br
    br
    input(type="submit" value="Edit this image")