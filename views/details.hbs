<div class="detailed-page">

  {{#with singlePhoto}}
  <div class="detailed-post">
    <span class="title">{{title}}</span> -- {{author}} <br>
    <img src="{{link}}" alt="A photograph of the sea" class="detailed-image"> <br>
    <div class="description">
      {{description}}
    </div>

    <form action="/gallery/{{id}}/edit" method="GET" enctype="application/x-www-form-urlencoded">
      <input type="submit" value="Edit Photo">
    </form>

    <form action="/gallery/{{id}}?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
      <input type="submit" value="Delete Photo">
    </form>
  </div>
  {{/with}}

  <div class="sidebar">
    {{#each photoList}}
    <div class="card">
      <a href="/gallery/{{id}}">
        <img src="{{link}}" alt="A photograph of the sea" class="photo"> <br>
        {{title}} -- {{author}}
      </a>
    </div>
    {{/each}}
  </div>

</div>