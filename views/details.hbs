<div id="detailed-page">

  {{#with singlePhoto}}
  <div id="detailed-post">
    <span id="title">{{title}}</span> -- {{author}} <br>
    <img src="{{link}}" alt="A photograph of the sea" id="detailed-image"> <br>
    {{description}}

    <form action="/gallery/{{id}}/edit" method="GET" enctype="application/x-www-form-urlencoded">
      <input type="submit" value="Edit Photo">
    </form>

    <form action="/gallery/{{id}}?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded">
      <input type="submit" value="Delete Photo">
    </form>
  </div>
  {{/with}}

  <div id="sidebar">
    {{#each photoList}}
    <div class="card">
      <a href="/gallery/{{id}}">
        <img src="{{link}}" alt="A photograph of the sea" class="photo"> <br>
      </a>
      {{title}} -- {{author}}
    </div>
    {{/each}}
  </div>

</div>